@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Rsvp Form </title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">
        RSVP
    </h5>

    <form method="post" class="m-2">
        <div id="error-message-div" asp-validation-summary="All"></div>
        <div class="form-group">
            Name:
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            Email:
            <input asp-for="Email" class="form-control"/>
        </div>
        <div class="form-group">
            Phone:
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group">
            Will you attend?
            <select asp-for="WillAttend" class="form-control">
                <option value="">Choose An Option </option>
                <option value="true">Yes</option>
                <option value="false">No</option>
                <option value="">Maybe</option>
            </select>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="RSVP Me" />
        </div>
    </form>

</body>
</html>
